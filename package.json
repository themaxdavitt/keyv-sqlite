{
	"name": "@keyv/sqlite",
	"version": "2.0.2",
	"description": "SQLite storage adapter for Keyv",
	"main": "src/index.js",
	"scripts": {
		"test": "xo && nyc ava",
		"coverage": "nyc report --reporter=text-lcov | coveralls"
	},
	"xo": {
		"prettier": true,
		"rules": {
			"unicorn/prefer-module": "off"
		}
	},
	"ava": {
		"require": [
			"esm",
			"requirable"
		]
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/themaxdavitt/keyv-sqlite.git"
	},
	"keywords": [
		"sqlite",
		"sql",
		"keyv",
		"storage",
		"adapter",
		"key",
		"value",
		"store",
		"cache",
		"ttl"
	],
	"author": "Luke Childs <lukechilds123@gmail.com> (http://lukechilds.co.uk)",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/themaxdavitt/keyv-sqlite/issues"
	},
	"homepage": "https://github.com/themaxdavitt/keyv-sqlite",
	"dependencies": {
		"@keyv/sql": "^1.1.2",
		"pify": "^3.0.0",
		"sqlite3": "^5.0.2"
	},
	"devDependencies": {
		"@keyv/test-suite": "*",
		"ava": "^3.15.0",
		"coveralls": "^3.1.0",
		"esm": "^3.2.25",
		"keyv": "*",
		"nyc": "^15.1.0",
		"requirable": "^1.0.5",
		"this": "^1.1.0",
		"xo": "^0.40.2"
	},
	"prettier": {
		"useTabs": true,
		"singleQuote": true,
		"bracketSpacing": true,
		"trailingComma": "es5"
	}
}
